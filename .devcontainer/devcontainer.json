{
	"name": "Snowpack and Azure Functions",
	"runArgs": [
		"--init"
	],
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"NODE_VERSION": "lts/*"
		}
	},
	"forwardPorts": [
		8080,
		7071,
		4280
	],
	"portsAttributes": {
		"8080": {
			"label": "Snowpack dev server",
			"onAutoForward": "openBrowserOnce",
		},
		"7071": {
			"label": "Azure Functions Runtime",
			"onAutoForward": "ignore",
		},
		"4280": {
			"label": "Application",
			"onAutoForward": "ignore",
		}
	},
	"settings": {},
	"extensions": [
		"ms-azuretools.vscode-azurefunctions",
		"ms-azuretools.vscode-azurestaticwebapps",
		"ms-dotnettools.csharp",
		"ms-python.python",
		"dbaeumer.vscode-eslint"
	],
	"postCreateCommand": "npm clean-install && cd api && npm clean-install",
	"postStartCommand": "npm run start",
	"remoteUser": "vscode"
}